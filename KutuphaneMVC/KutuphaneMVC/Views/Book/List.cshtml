@model BookViewModel

<h1>Books</h1> <!-- Header for the books list -->
<table class="table table-striped">
    <thead>
        <tr>
            <th>Title</th> <!-- Column for book title -->
            <th>Author ID</th> <!-- Column for author ID -->
            <th>Genre</th> <!-- Column for genre -->
            <th>Publish Date</th> <!-- Column for publish date -->
            <th>ISBN</th> <!-- Column for ISBN -->
            <th>Copies Available</th> <!-- Column for available copies -->
            <th>Actions</th> <!-- Column for action buttons -->
        </tr>
    </thead>
    <tbody>
        @if (Model.Books != null && Model.Books.Any())
        {
            foreach (var book in Model.Books)
            {
                <tr>
                    <td>@book.Title</td> <!-- Display book title -->
                    <td>@book.AuthorId</td> <!-- Display author ID -->
                    <td>@book.Genre</td> <!-- Display genre -->
                    <td>@book.PublishDate.ToShortDateString()</td> <!-- Display publish date -->
                    <td>@book.ISBN</td> <!-- Display ISBN -->
                    <td>@book.CopiesAvailable</td> <!-- Display available copies -->
                    <td>
                        <a href="@Url.Action("Details", "Book", new { id = book.Id })" class="btn btn-info btn-sm">Details</a> <!-- Button for book details -->
                        <a href="@Url.Action("Edit", "Book", new { id = book.Id })" class="btn btn-warning btn-sm">Edit</a> <!-- Button to edit the book -->
                        <a href="@Url.Action("Delete", "Book", new { id = book.Id })" class="btn btn-danger btn-sm" onclick="return confirm('Are you sure you want to delete this book?');">Delete</a> <!-- Button to delete the book with confirmation -->
                    </td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="7" class="text-center">No books found.</td> <!-- Message when no books are available -->
            </tr>
        }
    </tbody>
</table>

<a href="@Url.Action("Create", "Book")" class="btn btn-primary">Add New Book</a> <!-- Button to add a new book -->
