@model LogInViewModel

<div class="row offset-3 mt-5">
    <div class="col-6" style="width:60%">
        <div class="card">
            <div class="card-header fw-bold fs-4 text-center">
                Sign In
            </div>

            <div class="card-body">
                @if (ViewBag.Error is not null)
                {
                    <div class="alert alert-danger">@ViewBag.Error</div>
                    // Display error message if available
                }

                <form method="post" asp-controller="Auth" asp-action="LogIn">
                    <div class="form-floating mt-2">
                        <input asp-for="Email" type="email" class="form-control" id="floatingInput" placeholder="name@example.com">
                        <label for="floatingInput">Email address</label>
                        <span asp-validation-for="Email" class="text-danger fw-bold mt-1"></span> // Validation message for Email
                    </div>

                    <div class="form-floating mt-2">
                        <input asp-for="Password" type="password" class="form-control" id="floatingPassword" placeholder="Password">
                        <label for="floatingPassword">Password</label>
                        <span asp-validation-for="Password" class="text-danger fw-bold mt-1"></span> // Validation message for Password
                    </div>

                    <button class="btn btn-primary w-100 py-2 mt-2" type="submit">Sign in</button> // Submit button for the form
                    <p class="mt-5 mb-3 text-body-secondary">© 2017–2024</p> // Copyright notice
                </form>
            </div>
        </div>
    </div>
</div>
