@model KutuphaneMVC.Models.SingUpViewModel

<div class="row offset-3 mt-5">
    <div class="col-6" style="width:60%">
        <div class="card">
            <div class="card-header fw-bold fs-4 text-center">
                Sign Up
            </div>

            <div class="card-body">
                <form method="post" asp-controller="Auth" asp-action="SignUp">
                    <div class="form-floating mb-2">
                        <input asp-for="FullName" class="form-control" id="floatingFullName" placeholder="Full Name">
                        <label for="floatingFullName">Full Name</label>
                        <span asp-validation-for="FullName" class="text-danger"></span> <!-- Error message for Full Name -->
                    </div>

                    <div class="form-floating mb-2">
                        <input asp-for="Email" type="email" class="form-control" id="floatingInput" placeholder="name@example.com">
                        <label for="floatingInput">Email Address</label>
                        <span asp-validation-for="Email" class="text-danger"></span> <!-- Error message for Email -->
                    </div>

                    <div class="form-floating mb-2">
                        <input asp-for="Password" type="password" class="form-control" id="floatingPassword" placeholder="Password">
                        <label for="floatingPassword">Password</label>
                        <span asp-validation-for="Password" class="text-danger"></span> <!-- Error message for Password -->
                    </div>

                    <div class="form-floating mb-2">
                        <input asp-for="PasswordConfirm" type="password" class="form-control" id="floatingPasswordConfirm" placeholder="Confirm Password">
                        <label for="floatingPasswordConfirm">Confirm Password</label>
                        <span asp-validation-for="PasswordConfirm" class="text-danger"></span> <!-- Error message for Confirm Password -->
                    </div>

                    <div class="form-floating mb-2">
                        <input asp-for="PhoneNumber" class="form-control" id="floatingPhoneNumber" placeholder="Phone Number">
                        <label for="floatingPhoneNumber">Phone Number</label>
                        <span asp-validation-for="PhoneNumber" class="text-danger"></span> <!-- Error message for Phone Number -->
                    </div>

                    <div class="form-floating mb-2">
                        <input asp-for="JoinDate" class="form-control" type="date" id="floatingJoinDate">
                        <label for="floatingJoinDate">Join Date</label>
                        <span asp-validation-for="JoinDate" class="text-danger"></span> <!-- Error message for Join Date -->
                    </div>

                    @if (!string.IsNullOrEmpty(ViewBag.Error))
                    {
                        <div class="text-danger mb-3">@ViewBag.Error</div> <!-- General error message -->
                    }

                    <button class="btn btn-primary w-100 py-2" type="submit">Sign Up</button> <!-- Submit button for registration -->
                    <p class="mt-5 mb-3 text-body-secondary">© 2017–2024</p> <!-- Copyright notice -->
                </form>
            </div>
        </div>
    </div>
</div>
